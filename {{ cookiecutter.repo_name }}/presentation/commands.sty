\newcommand{\numbered}{
    \setbeamertemplate{footline}{
        \raisebox{5pt}{
            \makebox[\paperwidth]{
                \hfill
                \makebox[15pt]{
                    \large\insertframenumber
                }
                \hspace{5pt}
            }
        }
    }
}

\newcommand{\unumbered}{
    \setbeamertemplate{footline}{
        \raisebox{5pt}{
            \makebox[\paperwidth]{
                \hfill
                \makebox[15pt]{}
                \hspace{15pt}
            }
        }
    }
}


\newcommand{\customframe}[1]{
    \begin{frame}
        \frametitle{\insertsubsection}
        #1
    \end{frame}
}

\newcommand{\introframe}[1]{
    \begin{frame}
        \frametitle{Introduction}
        #1
    \end{frame}
}


\newcommand{\conclusionframe}[1]{
    \begin{frame}
        \frametitle{Conclusion}
        #1
    \end{frame}
}


\newcommand{\beginframes}{
    \unumbered
    \begin{frame}[noframenumbering]
        \titlepage
    \end{frame}
    \numbered
    \begin{frame}{\contentsname}
        \begin{columns}[t]
            \begin{column}{.5\textwidth}
                \tableofcontents[sections={1-3}]
            \end{column}
            \begin{column}{.5\textwidth}
                \tableofcontents[sections={4-6}]
            \end{column}
        \end{columns}
    \end{frame}
}


\newcommand{\insertfigure}[2]{
\begin{figure}[h]
    \centering
    \includegraphics[width=0.6\textwidth]{ #1 }
    \caption{
        #2
    }
\end{figure}
}


\AtBeginSection[]{
    \begin{frame}{\contentsname}
        \begin{columns}[t]
            \begin{column}{.5\textwidth}
                \tableofcontents[sections={1-3}, currentsection]
            \end{column}
            \begin{column}{.5\textwidth}
                \tableofcontents[sections={4-6}, currentsection]
            \end{column}
        \end{columns}
    \end{frame}
}



